extends layouts/default

block content
	article#intro
		#logo
			+icon('triple-verge')

		h1= info.title
		h2= info.subTitle

	ul#social
		li.social__item
			a.button(target="_blank", href="http://fb.com/tripleverge", title="Facebook")
				+icon('facebook')

		li.social__item
			a.button(target="_blank", href="http://twitter.com/tripleverge", title="Twitter")
				+icon('twitter')

		li.social__item
			a.button(target="_blank", href="https://www.linkedin.com/company/triple-verge", title="Linkedin")
				+icon('linkedin')

		li.social__item
			a.button(target="_blank", href="https://instagram.com/tripleverge/", title="Instagram")
				+icon('instagram')

		li.social__item
			a.button(target="_blank", href="https://github.com/triple-verge/", title="GitHub")
				+icon('github')

	footer#footer
		p
			span.contact #[a(href="mailto://hello@tripleverge.com", alt="Triple Verge contact e-mail", title="Hello!") hello@tripleverge.com] | #[a(href="tel:5553981229099", alt="Triple Verge contact phone", title="Call me maybe!") +55 53 98122 9099]

			small.copyright &copy; Triple Verge 2015 - 2017
