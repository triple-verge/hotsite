body
	setPageBG('intro')
	font-family $font-family-brand

section
	overflow hidden
	position relative
	min-height 100%

	&:before
		content ''
		position absolute
		top rem(-80)
		left -1px
		right -1px
		height rem(80)
		background $color-white
		transform translateY(50%) rotate($degrees) skew($degrees)
		z-index 1

	// @media $bp-quinn

#intro
	padding rem(120) 0 rem(180)
	color $color-white
	text-align center

#logo
	margin 0 auto rem(20)

	.icon
		size 50%
